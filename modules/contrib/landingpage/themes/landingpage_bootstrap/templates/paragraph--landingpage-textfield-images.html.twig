{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
{{ content.field_paragraph_anchor[0] }}
<div{{ attributes.addClass(classes) }}{% if inline_styles %} style="{{ inline_styles }}"{% endif %}>
  <div class="container">
    <div class="row">   
      <div class="col-sm-12">
        <h2>{{ content.field_landingpage_textfield[0] }}</h2>
      </div>
    </div>  
    <div class="row">
    {% if content.field_landingpage_images[1]|length == 0 %}
      <div class="col-sm-12">    
        {{ content.field_landingpage_images[0] }}
      </div>
    {% endif %}
    {% if content.field_landingpage_images[2]|length == 0 %}
      <div class="col-sm-6">    
        {{ content.field_landingpage_images[0] }}
      </div>
      <div class="col-sm-6">    
        {{ content.field_landingpage_images[1] }}
      </div>
    {% endif %}
    {% if content.field_landingpage_images[3]|length == 0 %}
      <div class="col-sm-4">    
        {{ content.field_landingpage_images[0] }}
      </div>
      <div class="col-sm-4">    
        {{ content.field_landingpage_images[1] }}
      </div>
      <div class="col-sm-4">    
        {{ content.field_landingpage_images[2] }}
      </div>
    {% endif %}   
    {% if content.field_landingpage_images[3]|length > 0 %}             
      <div class="col-sm-3">    
        {{ content.field_landingpage_images[0] }}
      </div>
      <div class="col-sm-3">    
        {{ content.field_landingpage_images[1] }}
      </div>
      <div class="col-sm-3">    
        {{ content.field_landingpage_images[2] }}
      </div>
      <div class="col-sm-3">    
        {{ content.field_landingpage_images[3] }}
      </div>  
    {% endif %}                       
    </div>
  </div>  
</div>